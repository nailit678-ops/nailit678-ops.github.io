<body>
    <div class="container">
        <h1>Cyberpunk CRM</h1>
        
        <div class="tabs">
            <button class="tab-button active" onclick="showTab('new')">新增页面</button>
            <button class="tab-button" onclick="showTab('retention')">留存页面</button>
            <button class="tab-button" onclick="showTab('dashboard')">看板</button>
        </div>
        
        <div id="new" class="tab-content active">
            <h2>新增记录</h2>
            <form id="newForm">
                <label>姓名：</label>
                <input type="text" id="name" required>
                
                <label>渠道：</label>
                <select id="channel" required>
                    <option value="抖音">抖音</option>
                    <option value="Tinder">Tinder</option>
                    <option value="Bumble">Bumble</option>
                    <option value="红书">红书</option>
                    <option value="积木">积木</option>
                    <option value="线下搭讪">线下搭讪</option>
                </select>
                
                <label>打分（4-8，0.5间隔）：</label>
                <select id="score" required>
                    <option value="4">4</option>
                    <option value="4.5">4.5</option>
                    <option value="5">5</option>
                    <option value="5.5">5.5</option>
                    <option value="6">6</option>
                    <option value="6.5">6.5</option>
                    <option value="7">7</option>
                    <option value="7.5">7.5</option>
                    <option value="8">8</option>
                </select>
                
                <label>标签：</label>
                <select id="tag" required>
                    <option value="国女">国女</option>
                    <option value="S女">S女</option>
                    <option value="老登">老登</option>
                    <option value="精神小妹">精神小妹</option>
                </select>
                
                <label>其他信息：</label>
                <select id="other" required>
                    <option value="窗口大">窗口大</option>
                    <option value="没兴趣">没兴趣</option>
                </select>
                
                <button type="submit">添加</button>
            </form>
            
            <h2>新增列表</h2>
            <div id="newList"></div>
        </div>
        
        <div id="retention" class="tab-content">
            <h2>留存管理</h2>
            <form id="retentionForm">
                <label>选择姓名：</label>
                <select id="retentionName"></select>
                
                <label>更新阶段：</label>
                <select id="stage" required>
                    <option value="添加">添加</option>
                    <option value="一约">一约</option>
                    <option value="二约">二约</option>
                    <option value="三约">三约</option>
                    <option value="放弃">放弃</option>
                    <option value="得吃">得吃</option>
                </select>
                
                <button type="submit">更新</button>
            </form>
            
            <h2>留存列表</h2>
            <div id="retentionList"></div>
            
            <div id="reminders" class="reminder"></div>
        </div>
        
        <div id="dashboard" class="tab-content">
            <h2>看板</h2>
            
            <form id="goalForm">
                <label>设置目标（新增/月）：</label>
                <input type="number" id="monthlyGoal" placeholder="每月新增目标">
                <button type="submit">保存目标</button>
            </form>
            
            <div class="dashboard">
                <h3>统计</h3>
                <p id="dailyNew"></p>
                <p id="weeklyNew"></p>
                <p id="monthlyNew"></p>
                
                <h3>转化漏斗</h3>
                <div class="funnel">
                    <div class="funnel-stage" id="funnelAdded">添加: 0</div>
                    <div class="funnel-stage" id="funnelFirst">一约: 0</div>
                    <div class="funnel-stage" id="funnelSecond">二约: 0</div>
                    <div class="funnel-stage" id="funnelThird">三约: 0</div>
                    <div class="funnel-stage" id="funnelSuccess">得吃: 0</div>
                    <div class="funnel-stage" id="funnelAbandon">放弃: 0</div>
                </div>
                
                <h3>达成 vs 目标</h3>
                <p id="vsGoal"></p>
            </div>
        </div>
    </div>
    
    <script>
        // 使用 localStorage 存储数据
        let records = JSON.parse(localStorage.getItem('crmRecords')) || [];
        let goals = JSON.parse(localStorage.getItem('crmGoals')) || { monthly: 0 };
        
        function showTab(tabId) {
            document.querySelectorAll('.tab-content').forEach(el => el.classList.remove('active'));
            document.getElementById(tabId).classList.add('active');
            document.querySelectorAll('.tab-button').forEach(el => el.classList.remove('active'));
            document.querySelector(`[onclick="showTab('${tabId}')"]`).classList.add('active');
            if (tabId === 'retention') updateRetentionOptions();
            if (tabId === 'dashboard') updateDashboard();
        }
        
        // 新增页面
        document.getElementById('newForm').addEventListener('submit', e => {
            e.preventDefault();
            const record = {
                name: document.getElementById('name').value,
                channel: document.getElementById('channel').value,
                score: document.getElementById('score').value,
                tag: document.getElementById('tag').value,
                other: document.getElementById('other').value,
                date: new Date().toISOString(),
                stage: '添加'  // 初始阶段
            };
            records.push(record);
            localStorage.setItem('crmRecords', JSON.stringify(records));
            updateNewList();
            e.target.reset();
        });
        
        function updateNewList() {
            const list = document.getElementById('newList');
            list.innerHTML = '';
            records.forEach(rec => {
                const item = document.createElement('div');
                item.classList.add('list-item');
                item.innerHTML = `姓名: ${rec.name} | 渠道: ${rec.channel} | 打分: ${rec.score} | 标签: ${rec.tag} | 其他: ${rec.other} | 日期: ${new Date(rec.date).toLocaleDateString()}`;
                list.appendChild(item);
            });
        }
        
        // 留存页面
        function updateRetentionOptions() {
            const select = document.getElementById('retentionName');
            select.innerHTML = '';
            records.forEach(rec => {
                const option = document.createElement('option');
                option.value = rec.name;
                option.textContent = rec.name;
                select.appendChild(option);
            });
        }
        
        document.getElementById('retentionForm').addEventListener('submit', e => {
            e.preventDefault();
            const name = document.getElementById('retentionName').value;
            const stage = document.getElementById('stage').value;
            const rec = records.find(r => r.name === name);
            if (rec) {
                rec.stage = stage;
                rec.updateDate = new Date().toISOString();  // 更新时间用于T+7
                localStorage.setItem('crmRecords', JSON.stringify(records));
                updateRetentionList();
                updateReminders();
            }
        });
        
        function updateRetentionList() {
            const list = document.getElementById('retentionList');
            list.innerHTML = '';
            records.forEach(rec => {
                const item = document.createElement('div');
                item.classList.add('list-item');
                item.innerHTML = `姓名: ${rec.name} | 阶段: ${rec.stage} | 标签: ${rec.tag} | 更新日期: ${rec.updateDate ? new Date(rec.updateDate).toLocaleDateString() : 'N/A'}`;
                list.appendChild(item);
            });
        }
        
        function updateReminders() {
            const reminders = document.getElementById('reminders');
            reminders.innerHTML = '<h3>邀约提醒</h3>';
            const now = new Date();
            records.forEach(rec => {
                if (rec.updateDate) {
                    const updateDate = new Date(rec.updateDate);
                    const daysDiff = Math.floor((now - updateDate) / (1000 * 60 * 60 * 24));
                    let reminderText = '';
                    if (daysDiff >= 7 && rec.stage !== '得吃' && rec.stage !== '放弃' && rec.other === '窗口大') {
                        reminderText = `可以邀约: ${rec.name} (T+${daysDiff}, 标签: ${rec.tag}, 画像: 高兴趣潜力)`;
                    } else if (rec.tag === '精神小妹' && rec.stage === '添加') {
                        reminderText = `注意邀约: ${rec.name} (标签敏感，建议观察)`;
                    }
                    if (reminderText) {
                        const p = document.createElement('p');
                        p.textContent = reminderText;
                        reminders.appendChild(p);
                    }
                }
            });
        }
        
        // 看板
        document.getElementById('goalForm').addEventListener('submit', e => {
            e.preventDefault();
            goals.monthly = parseInt(document.getElementById('monthlyGoal').value) || 0;
            localStorage.setItem('crmGoals', JSON.stringify(goals));
            updateDashboard();
        });
        
        function updateDashboard() {
            const now = new Date();
            const startOfDay = new Date(now.getFullYear(), now.getMonth(), now.getDate());
            const startOfWeek = new Date(now);
            startOfWeek.setDate(now.getDate() - now.getDay());
            const startOfMonth = new Date(now.getFullYear(), now.getMonth(), 1);
            
            const dailyNew = records.filter(r => new Date(r.date) >= startOfDay).length;
            const weeklyNew = records.filter(r => new Date(r.date) >= startOfWeek).length;
            const monthlyNew = records.filter(r => new Date(r.date) >= startOfMonth).length;
            
            document.getElementById('dailyNew').textContent = `日新增: ${dailyNew}`;
            document.getElementById('weeklyNew').textContent = `周新增: ${weeklyNew}`;
            document.getElementById('monthlyNew').textContent = `月新增: ${monthlyNew}`;
            
            // 转化漏斗
            const counts = {
                添加: 0, 一约: 0, 二约: 0, 三约: 0, 得吃: 0, 放弃: 0
            };
            records.forEach(r => counts[r.stage]++);
            Object.keys(counts).forEach(stage => {
                document.getElementById(`funnel${stage === '添加' ? 'Added' : stage === '一约' ? 'First' : stage === '二约' ? 'Second' : stage === '三约' ? 'Third' : stage === '得吃' ? 'Success' : 'Abandon'}`).textContent = `${stage}: ${counts[stage]}`;
            });
            
            // 达成 vs 目标
            document.getElementById('vsGoal').textContent = `月新增达成: ${monthlyNew} / ${goals.monthly} (${((monthlyNew / goals.monthly) * 100).toFixed(2)}%)`;
        }
        
        // 初始化
        updateNewList();
        updateRetentionList();
        updateReminders();
        updateDashboard();
    </script>
</body>
</html>
